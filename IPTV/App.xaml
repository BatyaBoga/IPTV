<Application
    x:Class="IPTV.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPTV"
    xmlns:vm ="using:IPTV.ViewModels">



    <Application.Resources>

        <Style x:Key="MenuBtnStyle" TargetType="Button" >
            <Setter Property="Control.CornerRadius" Value="20,20,20,20" />
            <Setter Property="Control.BorderThickness" Value="2,2,2,2" />
            <Setter Property="Control.Width" Value="60" />
            <Setter Property="Control.Height" Value="60" />
        </Style>


        <Style x:Key="MiniBtnStyle" TargetType="Button" >
            <Setter Property="Control.CornerRadius" Value="10,10,10,10" />
            <Setter Property="Control.BorderThickness" Value="2,2,2,2" />
            <Setter Property="Control.Width" Value="30" />
            <Setter Property="Control.Height" Value="30" />
        </Style>

    </Application.Resources>
    
</Application>


